@model Movie


<h1>Yeni Film Ekle</h1>
<hr/>
<div class="row d-flex justify-content-center">
    <form method="post" class="col-6"  asp-controller="Movies" asp-action="Create" >
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
             <span class="text-danger"  asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="DirectorId"></label>
            <input asp-for="DirectorId" class="form-control" />
             <span class="text-danger" asp-validation-for="DirectorId"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
             <span class="text-danger" asp-validation-for="ImageUrl"></span>
        </div>
        <div class="form-group">
            <label asp-for="GenreId"></label>
            <select class="form-select" aria-label="Default select example" asp-for="GenreId" asp-items="@ViewBag.Genres" >
                <option selected disabled >Şeçiniz</option>
            </select>
             <span class="text-danger" asp-validation-for="GenreId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"> </textarea>
             <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    </form>
</div>