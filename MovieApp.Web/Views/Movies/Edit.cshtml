@model Movie


<h1>Yeni Film Ekle</h1>
<hr/>
<div class="row d-flex justify-content-center">
    <form method="post" class="col-6"  asp-controller="Movies" asp-action="Edit" >
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" value="@Model.Title" />
             <span class="text-danger"  asp-validation-for="Title"></span>

        </div>
        <div class="form-group">
            <label asp-for="Director"></label>
            <input asp-for="Director" class="form-control" value="@Model.Director" />
             <span class="text-danger"  asp-validation-for="Director"></span>

        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl" />
             <span class="text-danger"  asp-validation-for="ImageUrl"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="GenreId"></label>
            <select class="form-select" aria-label="Default select example" asp-for="GenreId" asp-items="@ViewBag.Genres" >
                <option selected disabled >Şeçiniz</option>
            </select>
             <span class="text-danger"  asp-validation-for="GenreId"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"> @Model.Description </textarea>
             <span class="text-danger"  asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    </form>
</div>